<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand">
        <span class="ion-cube"></span>
        Project Name
      </a>
    </div>

    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      {{#if user}}
      <li class="dropdown">
        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
          {{#if user.profile.picture}}
          <img src="{{user.profile.picture}}" alt="" class="profile-image">
          {{else}}
          <img src="{{user.gravatar}}" alt="" class="profile-image">{{#if user.profile.name}} {{user.profile.name}} {{else}} {{user.email}} {{/if}}
          {{/if}}
          <i class="caret"></i>
        </a>
        <ul class="dropdown-menu">
          <li>
            <a href="/account"><span class='ion-person'></span> My Account</a>
          </li>
          <li class="divider"></li>
          <li>
            <a href="/logout"><span class="ion-log-out"></span> Logout</a>
          </li>
        </ul>
      </li>
      {{else}}
      <li><a href="/login">Login</a></li>
      <li><a href="/signup">Create Account</a></li>
      {{/if}}
    </ul>
  </div>
</div>